{% comment %}
  This is a sample product section for Shopify using the provided CSS styles.
{% endcomment %}

{% assign product = section.settings.product %}
{% assign featured_image = product.selected_or_first_available_variant.featured_image %}

<div class="card">
  <div class="circle">
    <img src="{{ featured_image | img_url: 'large' }}" alt="{{ featured_image.alt | escape }}">
  </div>

  <div class="content">
    <h2>{{ product.title }}</h2>
    <p>{{ product.description }}</p>
    <a href="{{ product.url }}">Buy now</a>
  </div>
</div>

{% schema %}
  {
    "name": "Product section",
    "settings": [
      {
        "type": "product",
        "id": "product",
        "label": "Product"
      }
    ]
  }
{% endschema %}

